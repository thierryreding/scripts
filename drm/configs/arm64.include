# architecture
kconfig architecture arm64
kconfig allnoconfig
# basic configuration
kconfig enable DEBUG_FS
kconfig enable DEBUG_SECTION_MISMATCH
# sub-architectures
kconfig enable ARCH_TEGRA
# dependencies
kconfig enable BACKLIGHT_LCD_SUPPORT
kconfig enable TEGRA_HOST1X
kconfig enable TEGRA_HOST1X_FIREWALL
# DRM
kconfig enable DRM
kconfig enable DRM_TEGRA
# panel drivers
kconfig enable DRM_PANEL_SIMPLE
# miscellaneous
kconfig enable COMPILE_TEST
kconfig enable DRM_VC4
